<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    app:cardBackgroundColor="@color/card_grey"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="6dp">

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@+id/persontakes"
            android:background="@color/appblue" />

        <TextView
            android:id="@+id/personpays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@color/card_grey"
            android:paddingRight="8dp"
            android:text="Abhinav"
            android:textColor="@color/grey2"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/card_grey"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="123.3"
            android:textColor="@color/grey1"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/persontakes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:background="@color/card_grey"
            android:padding="2dp"
            android:text="Akshay"
            android:textColor="@color/grey2"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="6dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/line"
            android:src="@drawable/arrow_head" />

    </RelativeLayout>
</android.support.v7.widget.CardView>